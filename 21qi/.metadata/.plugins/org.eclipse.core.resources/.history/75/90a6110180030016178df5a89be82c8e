		String jsq = "n";
		int sum = 0;
		while ("n".equals(jsq)){
			java.util.Scanner sc = new java.util.Scanner(System.in);
			System.out.print("请输入单价");
			int num = sc.nextInt();
			sum += num;
			System.out.print("输入n继续");
			jsq = sc.next();
			
		}
		System.out.println(sum);
		
