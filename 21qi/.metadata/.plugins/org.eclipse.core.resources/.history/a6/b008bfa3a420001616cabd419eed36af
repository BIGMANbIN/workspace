	private void updatausers() {
		String name = getstr("请输入要修改的姓名：");
		
		boolean flag = false;
		for (Contact con : users) {
			if(con != null && name.equals(con.getName())){
				con.setName("修改名字为：");
				con.setPhone("修改电话为：");
				con.setSexualit("修改性别为：");
				con.setBirthday("修改生日为：");
				flag = true;
				break;
			}
		}
		if(flag){
			System.out.println("修改成功");
		}else {
			System.out.println("修改失败");
		}
	}

