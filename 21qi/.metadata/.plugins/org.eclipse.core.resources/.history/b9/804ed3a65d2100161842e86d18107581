public class Test {

	public static void main(String[] args) {
		int i = 0;
		java.util.Scanner sc = new java.util.Scanner(System.in); 
		System.out.print("请输入一个数字：");
		int n = sc.nextInt();
		if(n%2==0){
			System.out.println("你输入的是偶数");
		}else if(n % 2 == 1) {
			System.out.println("你输入的是一个奇数");
		}else {
			System.out.println("输入错误");
		}
	}
}
