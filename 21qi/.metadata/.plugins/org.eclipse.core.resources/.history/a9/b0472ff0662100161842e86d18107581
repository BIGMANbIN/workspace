package com.kaishengit;

//import com.kaishengit.Phone.PhoneBook;

public class Test {

	public static void main(String[] args) {
		int sum = 0;
		java.util.Scanner sc = new java.util.Scanner(System.in);
		System.out.println("输入消费总金额：");
		int num = sc.nextInt();
		
		if(num < 2000){
			num = (int) (num * 0.9);
		}else if(2000 <= num && num < 4000){
			num = (int) (num * 0.8);
		}else if(4000 <= num && num <5000){
			num = (int) (num * 0.7);
		}else{
			num = (int) (num * 0.6);
		}
		
		System.out.println("消费总金额为：" + num);
	}
}
